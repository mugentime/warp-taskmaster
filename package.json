{
  "name": "binance-futures-arbitrage-monitor",
  "private": true,
  "version": "0.0.0",
  "type": "module",
  "description": "Binance Futures Arbitrage Monitor with TaskMaster",
  "main": "index.js",
  "scripts": {
    "dev": "vite",
    "build": "vite build",
    "preview": "vite preview",
    "all": "npm run build && npm run preview",
    "test": "playwright test",
    "test:ui": "playwright test --ui",
    "test:headed": "playwright test --headed",
    "test:debug": "playwright test --debug",
    "test:e2e": "playwright test",
    "test:e2e:dev": "cross-env PW_BASE_URL=http://localhost:5173 playwright test",
    "test:e2e:preview": "cross-env PW_BASE_URL=http://localhost:4173 playwright test",
    "test:e2e:ui": "playwright test --ui",
    "bot:run": "cross-env NODE_ENV=production ts-node e2e/runner.ts",
    "bot:headless": "cross-env PLAYWRIGHT_HEADLESS=true npm run bot:run",
    "bot:report": "npx playwright show-report e2e/reports/html",
    "desktop:init": "pwsh -ExecutionPolicy Bypass -File desktop-commander-init.ps1",
    "desktop:start:trading": "pwsh -ExecutionPolicy Bypass -File desktop-commander.ps1 /start -Workspace trading",
    "desktop:start:development": "pwsh -ExecutionPolicy Bypass -File desktop-commander.ps1 /start -Workspace development",
    "desktop:start:monitoring": "pwsh -ExecutionPolicy Bypass -File desktop-commander.ps1 /start -Workspace monitoring",
    "desktop:stop": "pwsh -ExecutionPolicy Bypass -File desktop-commander.ps1 /stop",
    "desktop:status": "pwsh -ExecutionPolicy Bypass -File desktop-commander.ps1 /status",
    "desktop:restart-services": "pwsh -ExecutionPolicy Bypass -File desktop-commander.ps1 /restart-services"
  },
  "dependencies": {
    "axios": "^1.11.0",
    "express": "^5.1.0",
    "node-fetch": "^3.3.2",
    "react": "^19.1.1",
    "react-dom": "^19.1.1",
    "recharts": "^3.1.2",
    "uuid": "^13.0.0",
    "ws": "^8.18.3"
  },
  "devDependencies": {
    "@playwright/test": "^1.55.0",
    "@types/node": "^22.14.0",
    "@vitejs/plugin-react": "^5.0.2",
    "autoprefixer": "^10.4.21",
    "cross-env": "^10.0.0",
    "dotenv": "^17.2.2",
    "http-proxy-middleware": "^3.0.5",
    "pino": "^9.9.2",
    "playwright-core": "^1.55.0",
    "postcss": "^8.5.6",
    "tailwindcss": "^4.1.13",
    "ts-node": "^10.9.2",
    "typescript": "~5.8.2",
    "vite": "^6.2.0"
  }
}
